@model IEnumerable<MyPass.Entities.Category>

@{
    ViewBag.Title = "Gruplar";
}

<div class="container">
    <div class="card shadow">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6 mt-2">
                    <h5>@ViewBag.Title</h5>
                </div>
                <div class="col-md-6 text-right">
                    <span>
                        @Html.ActionLink("Grup Ekle", "Create", null, new { @class = "btn btn-primary" })
                    </span>
                </div>

            </div>

        </div>
        <div class="card-body">
            <table class="table table-bordered">
                @if (Model != null)
                {
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedOn)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ModifiedOn)
                        </th>
                        <th></th>
                    </tr>

                    foreach (var group in Model)
                    {
                        if (group.Title != null && group.Title.Length > 15)
                        {
                            group.Title = group.Title.Substring(0, 15) + "...";
                        }
                        if (group.Description != null && group.Description.Length > 40)
                        {
                            group.Description = group.Description.Substring(0, 40) + "...";
                        }
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => group.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => group.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => group.CreatedOn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => group.ModifiedOn)
                            </td>
                            <td class="text-center">
                                @Html.ActionLink("Detay", "Detail", new { id = group.Id }, new { @class = "btn btn-info btn-sm" })
                            </td>
                        </tr>
                    }

                }


            </table>
        </div>
    </div>
</div>


