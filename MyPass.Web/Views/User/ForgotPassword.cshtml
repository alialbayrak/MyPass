@model MyPass.Entities.ViewModel.ForgotPasswordViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Şifremi Unuttum</title>
    <link href="~/Content/template.min.css" rel="stylesheet" />
</head>
<body class="bg-gradient-primary">
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="container" style="padding-left: 15%;padding-right: 15%;">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="p-5">
                                        <div class="text-center">
                                            <h1 class="h4 text-gray-900 mb-2">Şifreni Mi Unuttun?</h1><br />
                                            <p class="mb-4">Aşağıdaki kutucuğa e-posta adresini yazdıktan sonra şifre sıfırlama linkini e-posta adresine göndereceğiz.</p><br />
                                        </div>

                                        @using (Html.BeginForm("ForgotPassword", "User", FormMethod.Post, new { @class = "user" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            <div class="form-group text-danger">
                                                @Html.ValidationSummary(false)
                                            </div>
                                            <div class="form-group">
                                                @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control form-control-user", autofocus = "", placeholder = "E-Posta Adresiniz" } })
                                            </div>
                                            <button class="btn btn-primary btn-user btn-block">
                                                Şifreyi Sıfırla
                                            </button>
                                        }
                                        <hr>
                                        <div class="text-center">
                                            <a class="small" href="@Url.Action("Register","User")">Hesap Oluştur</a>
                                        </div>
                                        <div class="text-center">
                                            <a class="small" href="@Url.Action("Login","User")">Zaten hesabınız var mı? Giriş yap!</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
